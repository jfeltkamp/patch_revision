<div class="cr-patch-header">
  <div class="cr-patch-header--by">
    <span class="cr-patch-header--label">{% trans %}Created by:{% endtrans %}</span>
    <span property="author">{{ creator }}</span>
  </div>
  <div class="cr-patch-header--on">
    <span class="cr-patch-header--label">{% trans %}Created on:{% endtrans %}</span>
    <time datetime="{{ created|format_date('Y-m-d') }}" property="datePublished">{{ created|format_date('medium') }}</time>
  </div>
</div>

{% if log_message %}
<div class="cr-log-message">
  <div class="cr-log-message--label">{% trans %}Log message from creator:{% endtrans %}</div>
  <h2 class="cr-log-message--log-message">"{{ log_message }}"</h2>
</div>
{% endif %}